<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="1dp"
    android:layout_weight="1"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/huge_blank"
        android:layout_marginLeft="@dimen/huge_blank"
        android:layout_marginTop="@dimen/huge_blank">

        <ImageView
            android:id="@+id/dep_module_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/dep_module_name_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_blank"
            android:layout_toRightOf="@+id/dep_module_icon_iv"
            android:drawablePadding="@dimen/normal_blank"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="科室"
            android:textColor="@color/title_color_primary"
            android:textSize="@dimen/tx_large_size" />

    </RelativeLayout>
</RelativeLayout>